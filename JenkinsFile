pipeline {
	agent any
		stages {
			stage('Github') {
				steps {
					echo 'Building...'
					git branch: 'main', credentialsId: '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', url: 'git@github.com:Caderonas/caesar-cipher.git'
				}
			}
			stage('Test') {
				steps {
					echo 'Testing...'
					sh './gradlew tasks --all'
				}
			}
			stage('Build') {
				steps {
					echo 'Building...'
					sh './gradlew clean build'
				}
			}
			stage('Release') {
				steps {
					sh 'gh release create'
					sh 'gh release upload 0.1.1 caesar-cipher-0.1.1.jar'	
				}
			}
		}
}